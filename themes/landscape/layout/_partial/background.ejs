<% if (theme.background.on){ %>
    <script>
        $(document).ready(function() {
            var backgroundnum = <%= theme.background.background_sum %>;
            var backgroundimg = "url(<%- theme.background.background_url %>bg-x.jpg)".replace(/x/gi, Math.ceil(Math.random() * backgroundnum));
            $("#mobile-nav").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
            $(".left-col").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
        })
    </script>
<% } else { %>
    <script>
        $(document).ready(function() {
            var backgroundnum = <%= theme.background.background_image %>;
            var backgroundimg = "url(<%- theme.background.background_url %>bg-" + backgroundnum +".jpg)";
            $("#mobile-nav").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
            $(".left-col").css({"background-image": backgroundimg,"background-size": "cover","background-position": "center"});
        })
    </script>
<% } %>
<% if (theme.bodybg){ %>
<style>
body {
        background: url(<%- theme.bodybg %>);
     }
</style>
 <% } %>

